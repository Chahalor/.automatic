{
	"Class": {
		"prefix": "clas",
		"description": "Template class for cpp",
		"body": [
			"#pragma once",
			"",
			"class ${1:ClassName}",
			"{",
			"    private:",
			"        ${2://...}",
			"    public:",
			"    /* -Constructors- */",
			"        ${1:ClassName}();",
			"        ${1:ClassName}(const ${1:ClassName} &_other);",
			"",
			"    /* -Destructors-  */",
			"        ~${1:ClassName}();",
			"        //...",
			"    /*    -Getter-    */",
			"        //...",
			"    /*    -Setter-    */",
			"        //...",
			"    /*  -Operators-   */",
			"        ${1:ClassName} &operator=(const ${1:ClassName} &_other);",
			"};",
			""
		]
	},
	"HeaderFileType": {
		"prefix": "typeHeader",
		"description": "standard header for types headers",
		"body": [
			"// Header",
			"",
			"# pragma once",
			"",
			"/* ************************************************************************** */",
			"/*                                 Headers                                    */",
			"/* ************************************************************************** */",
			"",
			"/* -----| Systems   |----- */",
			"\t//...",
			"",
			"/* -----| Globals   |----- */",
			"\t//...",
			"",
			"/* -----| Internals |----- */",
			"\t//...",
			"",
			"/* -----| Modules   |----- */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Typedefs                                   */",
			"/* ************************************************************************** */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Enums                                      */",
			"/* ************************************************************************** */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Unions                                     */",
			"/* ************************************************************************** */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Structs                                    */",
			"/* ************************************************************************** */",
			"\t//..."
		]
	},
	"HeaderFilePublic": {
		"prefix": "interfaceHeader",
		"description": "standard header for interface headers",
		"body": [
			"// Header",
			"",
			"# pragma once",
			"",
			"/* ************************************************************************** */",
			"/*                                 Headers                                    */",
			"/* ************************************************************************** */",
			"",
			"/* -----| Systems   |----- */",
			"\t//...",
			"",
			"/* -----| Globals   |----- */",
			"# include \"config.h\"",
			"# include \"standards.h\"",
			"",
			"/* -----| Internals |----- */",
			"# include \"types.h\"",
			"",
			"/* -----| Modules   |----- */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Macros                                     */",
			"/* ************************************************************************** */",
			"\t//...",
			"",
			"/* ************************************************************************** */",
			"/*                                 Prototypes                                 */",
			"/* ************************************************************************** */",
			"\t//..."
		]
	},
}
